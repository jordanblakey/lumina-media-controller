{
  "name": "lumina-media-controller",
  "productName": "Lumina",
  "version": "1.0.0",
  "description": "A premium, intelligent media dashboard for the Linux desktop.",
  "homepage": "https://example.com/electron-experiments",
  "main": "src/main.js",
  "scripts": {
    "start": "electron . --no-sandbox",
    "clean": "rm -rf dist",
    "build": "electron-builder",
    "build:fast": "electron-builder --linux deb -c.compression=store",
    "build:dir": "electron-builder --dir",
    "rebuild": "npm run build:fast && sudo apt remove lumina-media-controller -y || true && sudo apt install ./dist/lumina-media-controller_1.0.0_amd64.deb -y && /opt/Lumina/lumina-media-controller"
  },
  "build": {
    "appId": "com.lumina.mediacontroller",
    "icon": "assets/icon.png",
    "linux": {
      "category": "AudioVideo",
      "target": [
        "deb"
      ],
      "icon": "assets/icon.png"
    },
    "deb": {
      "appArmorProfile": "build/apparmor-profile",
      "afterInstall": "build/after-install.sh"
    }
  },
  "keywords": [],
  "author": "Jordan Blakey <jblakey@example.com>",
  "license": "MIT",
  "maintainer": "Jordan Blakey <jblakey@example.com>",
  "type": "commonjs",
  "devDependencies": {
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "electron-reloader": "^1.2.3"
  }
}
